@model IEnumerable<WordParser.Models.Document>
@{
    ViewBag.Title = "Anasayfa";
}
<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            @using (@Html.BeginForm("Search", "Home", FormMethod.Post, new { @class = "navbar-form navbar-left", role = "search" }))
            {
                <div class="form-group">
                    @Html.TextBox("SearchString", null, new { @class = "form-control", placeholder = "Ara..." })
                </div>
                <button type="submit" class="btn btn-default">
                    <span class="glyphicon glyphicon-search"></span>  Ara
                </button>
                <span class="text-danger">@ViewBag.AramaHata</span>
            }
        </div>
        <h3>Ekli Dokümanlar</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="col-sm-2 text-center">Doküman Türü</th>
                <th class="text-center">Doküman</th>
                <th class="text-center">Güncelle/Sil</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">@item.DocumentType.Name</td>
                    <td>
                        @Html.ActionLink(item.Name, "Detail", new { documentId = item.Id, paragraphId = 0 })
                    </td>

                    <td class="text-center">
                        @Html.ActionLink("Sil", "Delete", new { documentId = item.Id }, new { @class = "btn btn-danger" })
                        @Html.ActionLink("Güncelle", "Update", new { documentId = item.Id }, new { @class = "btn btn-default" })
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Yeni Doküman Ekle", "Add", null,
new { @class = "btn btn-default" })
    </div>
</div>
