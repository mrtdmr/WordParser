@model WordParser.Models.DocumentViewModel
@{
    ViewBag.Title = "Döküman Detay";
}

@if (Model.Document != null)
{
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>@Model.Document.Name</h3>
        </div>
        <div class="panel-body">
            <div id="paragraphs" class="col-xs-3 pre-scrollable">
                @Html.Action("Menu", "Nav")
            </div>
            <div class="col-xs-8">
                <div class="panel-group">
                    @if (Model.Paragraph != null)
                    {
                        <div class="panel-heading">
                            <b>@Model.Paragraph.Name</b>
                        </div>
                        <div class="panel-body">
                            @(new HtmlString(Model.Paragraph?.Content))
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="panel-footer">
        </div>
    </div>
}

