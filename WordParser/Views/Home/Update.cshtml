@model WordParser.Models.Document
@{
    /**/

    ViewBag.Title = "Doküman Güncelle";
}

@using (Html.BeginForm("Update",
                            "Home",
                            FormMethod.Post,
                            new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <div class="panel panel-default">
        <div class="panel-heading"><h3>Doküman Güncelle</h3></div>
        <div class="panel-body">
            <div class="row">
                <div class="form-group">
                    <div class="col-sm-2">
                        Doküman Adı
                    </div>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                    </div>
                    <div class="col-sm-5">
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="form-group">
                    <div class="col-sm-2">
                        Doküman Tipi
                    </div>
                    <div class="col-sm-3">
                        @Html.DropDownList("DocumentTypeId", null, "Dosya türü seçiniz", new { @class = "form-control" })
                    </div>
                    <div class="col-sm-5">
                        @Html.ValidationMessageFor(model => model.DocumentTypeId)
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-footer">
            @Html.ActionLink("Geri Dön", "Index", null,
                new
                {
                    @class = "btn btn-default"
                })
            @Html.ActionLink("Sil", "Delete", new { documentId = Model.Id }, new { @class = "btn btn-danger" })
            <button type="submit" class="btn btn-primary">
                <span class="glyphicon glyphicon-save"></span>   Güncelle
            </button>
        </div>
    </div>
}
