@model WordParser.Models.Document
@{
    ViewBag.Title = "Doküman Ekle";
}

@using (Html.BeginForm("Add",
                            "Home",
                            FormMethod.Post,
                            new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="panel panel-default">
        <div class="panel-heading"><h3>Doküman Ekle</h3></div>
        <div class="panel-body">
            <div class="row">
                <div class="form-group">
                    <div class="col-sm-2">
                        Doküman Seçiniz:
                    </div>
                    <div class="col-sm-5">
                        <input type="file" name="file" id="file" /><br />@ViewBag.FileError
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <div class="col-sm-2">
                        Doküman Tipi
                    </div>
                    <div class="col-sm-3">
                        @Html.DropDownListFor(model => model.DocumentTypeId, (SelectList)ViewBag.DocumentTypeId, "Dosya türü seçiniz", new { @class = "form-control" })
                    </div>
                    <div class="col-sm-5">
                        @Html.ValidationMessageFor(model => model.DocumentTypeId)
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="form-group">
                    <div class="col-sm-2">
                        Doküman Adı
                    </div>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                    </div>
                    <div class="col-sm-5">
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>
            </div>

        </div>
        <div class="panel-footer">
            @Html.ActionLink("Geri Dön", "Index", null,
                new
                {
                    @class = "btn btn-default"
                })
            <button type="submit" class="btn btn-primary">
                <span class="glyphicon glyphicon-save"></span>   Kaydet
            </button>
        </div>
    </div>
}
