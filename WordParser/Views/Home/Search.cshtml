@model WordParser.Models.SearchViewModel
@{
    ViewBag.Title = "Search";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Arama Sonuçları</h3>
    </div>
    <div class="panel-body">
        <h1>Döküman</h1>
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="col-sm-2 text-center">Döküman Türü</th>
                <th class="text-center">Döküman</th>
            </tr>
            @foreach (var item in Model.Documents)
            {
                <tr>
                    <td class="text-center">@item.DocumentType.Name</td>
                    <td>
                        @Html.ActionLink(item.Name, "Detail", new { documentId = item.Id, paragraphId = 0 })
                    </td>
                </tr>
            }
        </table>
        <h1>Paragraf</h1>
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="col-sm-2 text-center">Paragraf</th>
                <th class="text-center">İçerik</th>
            </tr>
            @foreach (var item in Model.Paragraphs)
            {
                <tr>
                    <td class="text-center">@item.Name</td>
                    <td class="text-center">@(new HtmlString(item.Content))</td>
                </tr>
            }
        </table>
    </div>
</div>